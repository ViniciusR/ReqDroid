<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                  <EditText
                   android:id="@+id/textotitulosistema"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:textSize="15sp"
                   android:hint="@string/tela_escopo_hint_titulo_sistema"
                      android:minLines="2" />

                    <EditText
                    android:id="@+id/textodescricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tela_escopo_hint_descricao"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:minLines="2"/>

                    <EditText
                    android:id="@+id/textobenefÃ­cios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tela_escopo_hint_beneficios"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:minLines="2"
                    />

                    <EditText
                    android:id="@+id/textoobjetivos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tela_escopo_hint_objetivos"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                    android:minLines="2" />


                    <EditText
                    android:id="@+id/textopublicoalvo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tela_escopo_hint_publico_alvo"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
                        android:minLines="2" />
        </LinearLayout>
    </ScrollView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/botaoSalvarProjeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tela_escopo_botao_salvar" />

            <Button
                android:id="@+id/botaoDescartarProjeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tela_escopo_botao_descartar" />
            </LinearLayout>
</RelativeLayout>
    